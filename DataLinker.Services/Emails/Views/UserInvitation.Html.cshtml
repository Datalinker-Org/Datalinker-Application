@model DataLinker.Services.Emails.Models.UserInvitationEmail
Content-Type: text/html; charset=utf-8

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DataLinker Registration</title>
    <link rel="stylesheet" type="text/css" href="@Model.UrlToStylesFile">
</head>
<body>
    <table border="0" cellpadding="0" cellspacing="0" width="600" align="center">
        <tr>
            <td>
                <table border="0" cellpadding="0" cellspacing="0" align="center" width="100%">
                    <tr>
                        <td height="60" align="center" class="container-logo responsive-image">
                            <img src="@Model.UrlToImageInEmail" width="60" alt="dataLinker" />
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 10px 30px 0px 30px; vertical-align: top" align="center">
                            <div style="font-size: 24px; color: #2C3E44; padding-bottom: 20px; font-weight: bold;">Invitation to join</div>
                            <div style="font-size: 14px;">
                                @Model.InviterName has invited you to join their organisation, @Model.OrgName, on DataLinker.<br>Click on the button below to accept the invitation.
                                <br>
                                <br>
                                <a href="@Model.VerificationLink" target="_blank" style="padding: 8px 12px;font-family: Helvetica, Arial, sans-serif;font-size: 14px; Background-color: #f06543; color: #E8E8E8;text-decoration: none;font-weight:bold;display: inline-block;">Accept Invitation</a>
                                <br>
                                <br>
                                <p>
                                    This link will expire at @DateTime.Now.AddDays(7).ToString("dd/MM/yyyy hh:mm tt")
                                </p>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="padding: 20px 30px 30px 30px; vertical-align: top" align="center">
                            <div style="font-size: 14px; color: #2C3E44">
                                If you require help, contact us by email:<br><a href="mailto:@(Model.DataLinkerEmail)" class="email" style="color: #5f5f5f;">@Model.DataLinkerEmail</a>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td bgcolor="#1C6C8A" style="padding: 15px 0 15px 30px; color: #E8E8E8;" height="50">
                            <table border="0" cellpadding="0" cellspacing="0" align="center" width="49%">
                                <tr>
                                    <td>
                                        <div class="footer">
                                            <a href="@Model.DataLinkerHost" class="email">www.datalinker.org</a>
                                            <br>
                                            <span style="color: white">Email us to</span> <a href="mailto:@(Model.DataLinkerEmail)" class="email">@Model.DataLinkerEmail</a>
                                            <br>
                                            <br>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            <table border="0" cellpadding="0" cellspacing="0" align="center" width="49%">
                                <tr>
                                    <td>
                                        <div class="footer"></div>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>