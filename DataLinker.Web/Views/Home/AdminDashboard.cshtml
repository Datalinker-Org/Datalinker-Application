@using DataLinker.Web.Helpers

@model DataLinker.Models.AdminDashboardModel

<h2>Admin Dashboard (@Model.AdminOrgName)</h2>
<br />
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                7 Last Registered Organisations
                <span class="pull-right">
                    <a href="@Url.Action("Index","Organization")" class="btn btn-default btn-sm">
                        See All
                    </a>
                </span>
            </div>
            <table class="table">
                @foreach (var item in Model.Last7RegisteredOrgs)
                {
                    <tr>
                        <td>@item.Name <small class="side-text">Signed up on @item.Date.ToDisplayDate()</small></td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                7 Last Published Schemas
                <span class="pull-right">
                    <a href="@Url.Action("Index","Schemas")" class="btn btn-default btn-sm">
                        See All
                    </a>
                </span>
            </div>
            <table class="table">
                @foreach (var item in Model.Last7RegisteredSchemas)
                {
                    <tr>
                        <td>@item.Name <small class="side-text">Published on @item.Date.ToDisplayDate()</small></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="col-lg-3">
                    <span class="badge badge-number">@Model.PublishedProviders/@Model.FinalizedConsumers</span> Providers/Consumers
                </div>
                <div class="col-lg-3">
                    <span class="badge badge-number">@Model.PublishedDataSchemas</span> Published Data Schemas
                </div>
                <div class="col-lg-3">
                    <span class="badge badge-number">@Model.ActiveOrganisations</span> Active Organisations
                </div>
                <div class="col-lg-3">
                    <span class="badge badge-number">@Model.ActiveUsers</span> Active Users
                </div>
                <br />
            </div>
        </div>
    </div>
</div>
    @section scripts
{
        @Html.InitPageMainModule(string.Empty)
    }
