@model List<DataLinker.Models.DataProvider>

<form action="@Url.Action("SaveProviders", "Licenses", null)" method="post">
    <br />
    <p>Select providers that you interested in</p>
    @for(int i=0;i<Model.Count;i++)
    {
    <div class="row">
        @Html.HiddenFor(model => Model[i].LicenseId)
        @Html.HiddenFor(model => Model[i].CustomLicenseId)
        <div class="form-group">
            <div class="col-sm-6">
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(model => Model[i].IsSelected)
                        @Model[i].Name
                    </label>
                    <a href="@Url.Action("Download","Licenses", new {id = Model[i].LicenseId})">(Download license)</a>
                </div>
            </div>
        </div>
    </div>
    }
    <br />
    <div class="row" style="padding-left:15px">
        <button type="submit" @(Model.Count == 0?"disabled": "") class="btn btn-default">Save</button>
    </div>
</form>