@using DataLinker.Web.Helpers
@model DataLinker.Web.Models.Licenses.LicenseDownloadVm
<div style="margin-top: 20px;">
    <div style="font-size: 30px; font-weight:500;">&nbsp;</div>
    <div style="font-size: 20px; font-weight:500;">&nbsp;</div>
    <br />
    <br />
    <br />
    <div style="text-align: center;">
        The license is downloading ....
        <br />
        <br />
        If download does not start, please click on the link below.
        <br />
        <br />
        <br />
        <div style="text-align: center">
            <a href="@Url.Action("Download", "Licenses", new { appId = Model.ApplicationId, schemaId = Model.SchemaId, id = Model.LicenseId })" id="lnkDownload">
                Download
            </a>
        </div>
    </div>
</div>
@section scripts
{
    @Html.InitPageMainModule(string.Empty)
}
<script>
    document.getElementById("lnkDownload").click();
</script>
