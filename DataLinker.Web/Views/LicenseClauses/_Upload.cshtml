<div class="modal fade" id="upload-new-clause-dialog" role="dialog">
    <div class="modal-dialog">
        <div class="form-horizontal">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title"><span id="section-title"></span>: Upload new clause</h4>
                    <span id="section-id" class="hidden"></span>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="col-sm-9">
                            Upload new license clauses using correct YAML file.
                            You can @Html.ActionLink("download an empty template", "GetClauseExample") of this file to complete for upload.
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9">
                            Clauses: <input type="file" id="uploadFile" name="Upload"/>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="uploadClause" class="btn btn-success">Upload</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>
